<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context="com.Gacy.gacyProject.PagoActivity"
    android:orientation="vertical">
    <Button
        android:layout_gravity="top"
        android:id="@+id/button3"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginTop="100sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Numero de tarjeta"
        />

    <EditText
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:hint="ej.5555222288889999"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/numTarjeta1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Fecha/aÃ±o/ccv"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="06"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/mesTarjeta1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="19"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/anioTarjeta1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="123"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/numSeguridad1"/>

    <Button
        android:id="@+id/pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:layout_gravity="center_horizontal"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="333dp"
        tools:ignore="MissingConstraints"/>


</LinearLayout>
