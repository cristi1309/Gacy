<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Gacy.gacyProject.PerfilCiclistaActivity"
    android:orientation="vertical"
    >

        <Button
        android:id="@+id/backMe"
        android:layout_width="80sp"
            android:layout_height="40sp"
        android:layout_gravity="top"
        android:drawableBottom="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginBottom="5sp"/>

    <ImageView
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:id="@+id/imagCic"
        android:src= "@mipmap/ic_park"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10sp"
        />
    <Button
        android:id="@+id/cambiarIma"
        android:layout_width="40dp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:drawableBottom="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginBottom="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombre"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/nombreCic"
        android:layout_marginBottom="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calificación"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/califCic"
        android:layout_marginBottom="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="telefono"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/telefCic"
        android:layout_marginBottom="30sp"
        />


    <Button
        android:id="@+id/botReservar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Reservación"
        android:layout_marginBottom="70sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>
